/**
 * @param {number[]} gifts - The gifts to pack
 * @param {number} maxWeight - The maximum weight of the sleigh
 * @returns {number | null} The number of sleighs needed
 * Return null if no sleigh can carry all the gifts
 */
function packGifts(gifts, maxWeight) {
  // Si no hay regalos, no necesitamos trineos
  if (gifts.length === 0) {
    return 0;
  }
  
  // Verificar si algún regalo individual excede el peso máximo
  for (const gift of gifts) {
    if (gift > maxWeight) {
      return null;
    }
  }
  
  let sleighCount = 1;
  let currentWeight = 0;
  
  for (const gift of gifts) {
    // Si el regalo cabe en el trineo actual, lo añadimos
    if (currentWeight + gift <= maxWeight) {
      currentWeight += gift;
    } else {
      // Si no cabe, necesitamos un nuevo trineo
      sleighCount++;
      currentWeight = gift;
    }
  }
  
  return sleighCount;
}

// Pruebas
console.log(packGifts([2, 3, 4, 1], 5)); // 2
console.log(packGifts([3, 3, 2, 1], 3)); // 3
console.log(packGifts([1, 1, 1, 1], 2)); // 2
console.log(packGifts([5, 6, 1], 5)); // null
console.log(packGifts([], 10)); // 0